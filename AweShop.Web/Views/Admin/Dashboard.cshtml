@model IEnumerable<AweShop.Models.Product>

@{
    Layout = null;
    ViewBag.Title = "Admin Dashboard";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* CSS cho Admin Header Đỏ */
        .admin-header {
            background-color: #a91e1e;
            color: white;
            padding: 20px;
        }

        .table img {
            width: 50px;
            height: 50px;
            object-fit: contain;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .btn-action {
            cursor: pointer;
            border: none;
            background: none;
        }
    </style>
</head>
<body>
    <!-- Top Bar -->
    <div class="d-flex align-items-center px-4 py-2 bg-white border-bottom">
        <h3 class="mb-0"><span style="font-weight:900; color:#a91e1e">AWE 🌐</span> <b>Electronics</b></h3>
        <div class="ml-auto">
            <span class="mr-3 font-weight-bold">👤 Admin Panel</span>
            <a href="@Url.Action("Logout", "Auth")" class="text-danger">Logout</a>
        </div>
    </div>

    <!-- Red Header Section -->
    <div class="admin-header d-flex justify-content-between align-items-center">
        <div>
            <h1 class="font-weight-bold">Admin Dashboard</h1>
            <p class="mb-0">Manage your store inventory and orders</p>
        </div>
        <div>
            <!-- Nút Products đang Active -->
            <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-dark mr-2">Products</a>

            <!-- ĐÃ SỬA: Nút Orders giờ là thẻ 'a' để bấm được -->
            <a href="@Url.Action("Orders", "Admin")" class="btn btn-dark" style="opacity: 0.7">Orders</a>
        </div>
    </div>

    <div class="container-fluid mt-4">
        <div class="row">

            <!-- Cột bên trái: Danh sách sản phẩm -->
            <div class="col-md-8">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3>Product Management</h3>
                </div>

                <div class="card shadow-sm border-0">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th>Product</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Stock</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@item.ImageUrl" class="mr-3" alt="@item.Name">
                                                <div>
                                                    <div class="font-weight-bold">@item.Name</div>
                                                    <small class="text-muted">ID: @item.Id</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@item.Category</td>
                                        <td class="font-weight-bold">$@item.Price</td>
                                        <td class="text-success">In Stock</td>
                                        <td>
                                            <a href="@Url.Action("Edit", "Admin", new { id = item.Id })" class="text-dark mr-2" title="Edit">✏️</a>
                                            <a href="@Url.Action("Delete", "Admin", new { id = item.Id })" class="text-danger" title="Delete" onclick="return confirm('Bạn chắc chắn muốn xóa sản phẩm này?');">🗑</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Cột bên phải: Thống kê & Form thêm mới -->
            <div class="col-md-4">

                <!-- Thẻ đếm số lượng -->
                <div class="card shadow-sm border-0 bg-light mb-4">
                    <div class="card-body">
                        <h5 class="card-title text-muted">Total Products</h5>
                        <p class="card-text" style="font-size: 3rem; font-weight: 900; color:#a91e1e;">
                            @ViewBag.ProductCount
                        </p>
                    </div>
                </div>

                <!-- Form thêm sản phẩm -->
                <div class="card shadow-sm p-3">
                    <h4 class="font-weight-bold mb-3">Add Product</h4>

                    <form action="@Url.Action("Create", "Admin")" method="post">
                        <div class="form-group">
                            <label>Product name</label>
                            <input type="text" name="Name" class="form-control" required placeholder="Enter Product Name">
                        </div>

                        <div class="row">
                            <div class="col-6">
                                <label>Price</label>
                                <input type="number" name="Price" class="form-control" required placeholder="0.00" step="0.01">
                            </div>
                            <div class="col-6">
                                <label>Category</label>
                                <input type="text" name="Category" class="form-control" placeholder="Laptop">
                            </div>
                        </div>

                        <div class="form-group mt-2">
                            <label>Image URL</label>
                            <input type="text" name="ImageUrl" class="form-control" placeholder="/Images/ten_anh.png">
                        </div>

                        <button type="submit" class="btn btn-danger btn-block font-weight-bold mt-3" style="background-color:#a91e1e; border:none">
                            Add Product
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>