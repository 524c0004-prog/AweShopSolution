@model IEnumerable<AweShop.Models.Order>

@{
    ViewBag.Title = "Order Management";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Hoặc layout admin của bạn
}

<!-- Header giống Dashboard -->
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Order Management</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <!-- Nút quay lại Dashboard -->
            <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Products
            </a>
        </div>
    </div>
</div>

<!-- Bảng danh sách đơn hàng -->
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Date</th>
                <th scope="col">Customer Name</th>
                <th scope="col">Phone</th>
                <th scope="col">Address</th>
                <th scope="col">Note</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>#@item.Id</td>
                        <td>@item.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.FirstName @item.LastName</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.StreetAddress, @item.City</td>
                        <td>@item.ExtraNote</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">No orders found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>