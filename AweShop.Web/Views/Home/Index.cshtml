@model IEnumerable<AweShop.Models.Product>

@{
    ViewBag.Title = "AWE Electronics Home";
}

<div class="row mb-4">
    <div class="col-12">
        <div style="background: linear-gradient(90deg, #cc0000 0%, #000000 100%); color: white; padding: 40px; border-radius: 5px;">
            <h1>BLACK FRIDAY</h1>
            <p>Up to 50% OFF on all electronics!</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <h3>All Products <small class="text-muted" style="font-size: 0.6em">| @Model.Count() products available</small></h3>
        <hr />
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card h-100 shadow-sm" style="border: 1px solid #eee; border-radius: 12px; overflow: hidden;">

                <div style="height: 200px; display: flex; align-items: center; justify-content: center; background-color: #f9f9f9;">
                    <img src="@item.ImageUrl" alt="@item.Name" style="max-height: 180px; max-width: 100%;">
                </div>

                <div class="card-body">
                    <p class="text-muted mb-1" style="font-size: 0.8rem;">@item.Category</p>
                    <h5 class="card-title" style="font-weight: bold; font-size: 1rem; min-height: 40px;">@item.Name</h5>

                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <span style="font-size: 1.5rem; cursor: pointer;">&#9825;</span>
                        <span class="text-success font-weight-bold">AU$ @item.Price</span>
                    </div>
                </div>

                <div class="card-footer bg-white border-top-0 pb-3">
                    <div class="row">
                        <div class="col-6 pr-1">
                            <a href="@Url.Action("AddToCart", "Cart", new { id = item.Id })" class="btn btn-light btn-block btn-sm" style="border: 1px solid #ddd;">Add to cart</a>
                        </div>
                        <div class="col-6 pl-1">
                            <a href="@Url.Action("BuyNow", "Cart", new { id = item.Id })" class="btn btn-danger btn-block btn-sm">Buy now</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    }
</div>