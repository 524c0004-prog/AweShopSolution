@model AweShop.Models.User

@{ Layout = null; }

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sign Up - AWE Electronics</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f0f0f0;
            font-family: sans-serif;
        }

        .register-box {
            max-width: 600px;
            margin: 30px auto;
            background: white;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="container mt-4">
        <div class="d-flex align-items-center">
            <a href="@Url.Action("Index", "Home")" class="btn btn-link text-danger font-weight-bold pl-0">
                ← Back to Store
            </a>
            <div class="mx-auto pr-5">
                <h2><span style="font-weight:900; color:#a91e1e">AWE 🌐</span> <b>Electronics</b></h2>
            </div>
        </div>
    </div>

    <!-- Register Form -->
    <div class="register-box">
        <h2 class="text-center font-weight-bold mb-2">Create Account</h2>
        <p class="text-center text-muted mb-4">Sign up for AWE Electronics</p>

        @using (Html.BeginForm("Register", "Auth", FormMethod.Post))
        {
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="font-weight-bold">First name <span class="text-danger">*</span></label>
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Emma", required = "required" })
                </div>
                <div class="col-md-6 mb-3">
                    <label class="font-weight-bold">Last name <span class="text-danger">*</span></label>
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Doe", required = "required" })
                </div>
            </div>

            <div class="form-group">
                <label class="font-weight-bold">Email <span class="text-danger">*</span></label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "info@gmail.com", type = "email", required = "required" })
            </div>

            <div class="form-group">
                <label class="font-weight-bold">Password <span class="text-danger">*</span> (8+ characters)</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "********", required = "required" })
            </div>

            <div class="form-group">
                <label class="font-weight-bold">Password Confirm <span class="text-danger">*</span></label>
                <input type="password" class="form-control" placeholder="********" required />
            </div>

            <button type="submit" class="btn btn-danger btn-block mt-4 py-2" style="background-color: #a91e1e; border: none; border-radius: 5px;">
                Create Account
            </button>

            <div class="text-center mt-3">
                <span>Already have an account? </span>
                <a href="@Url.Action("Login", "Auth")" class="font-weight-bold text-dark">Log in</a>
            </div>
        }
    </div>
</body>
</html>